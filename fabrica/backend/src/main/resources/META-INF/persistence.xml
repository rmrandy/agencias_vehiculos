<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.agencias.backend.model.Repuesto</class>
        <class>com.agencias.backend.model.Role</class>
        <class>com.agencias.backend.model.AppUser</class>
        <class>com.agencias.backend.model.EnterpriseProfile</class>
        <class>com.agencias.backend.model.Category</class>
        <class>com.agencias.backend.model.Brand</class>
        <class>com.agencias.backend.model.Vehicle</class>
        <class>com.agencias.backend.model.Part</class>
        <class>com.agencias.backend.model.OrderHeader</class>
        <class>com.agencias.backend.model.OrderItem</class>
        <class>com.agencias.backend.model.OrderStatusHistory</class>
        <class>com.agencias.backend.model.PartReview</class>
        <class>com.agencias.backend.model.InventoryLog</class>
        <class>com.agencias.backend.model.ImportExportLog</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <!-- Estas propiedades serán sobrescritas por la configuración programática -->
        </properties>
    </persistence-unit>
</persistence>
