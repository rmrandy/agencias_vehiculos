<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.agencias</groupId>
  <artifactId>backend</artifactId>
  <name>Backend API</name>
  <version>1.0.0</version>
  <description>Backend REST API con JAX-RS, JPA y Hibernate</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.agencias.backend.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.agencias.backend.Main</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>io.smallrye:jandex</artifact>
                  <excludes>
                    <exclude>**</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <hibernate.version>6.4.1.Final</hibernate.version>
    <maven.compiler.target>17</maven.compiler.target>
    <jakarta.persistence.version>3.1.0</jakarta.persistence.version>
    <maven.compiler.source>17</maven.compiler.source>
    <jersey.version>3.1.3</jersey.version>
    <ojdbc.version>23.3.0.23.09</ojdbc.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jetty.version>11.0.20</jetty.version>
    <jackson.version>2.16.1</jackson.version>
  </properties>
</project>
